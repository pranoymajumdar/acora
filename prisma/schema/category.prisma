model Category {
    id          String    @id @default(uuid())
    name        String    @unique
    slug        String    @unique
    description String
    products    Product[]

    parentId String?
    parent   Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])

    children Category[] @relation("CategoryHierarchy")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
